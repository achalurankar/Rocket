<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_background"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<!--        Whole Item-->
        <RelativeLayout
            android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

<!--            Receiver Parent Layout-->
            <RelativeLayout
                android:id="@+id/receiver_msg_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:layout_marginRight="35dp">

                <RelativeLayout
                    android:id="@+id/receiver_reply_text_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/receiver_reply_layout_bg">

                    <TextView
                        android:id="@+id/receiver_reply_to_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/boogaloo"
                        android:padding="15dp"
                        android:text="achal urankar\nany terver revrevergvergve rg vrevreve rvvervext"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/receiver_drawable"
                    android:layout_below="@id/receiver_reply_text_layout">

                    <ImageView
                        android:id="@+id/receiver_image"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/logo_first" />

                    <TextView
                        android:id="@+id/receiver_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/boogaloo"
                        android:paddingLeft="15dp"
                        android:paddingTop="10dp"
                        android:paddingRight="15dp"
                        android:paddingBottom="10dp"
                        android:text="Hey Man"
                        android:layout_below="@id/receiver_image"
                        android:textColor="@color/chat_background"
                        android:textSize="15sp" />
                </RelativeLayout>
            </RelativeLayout>

<!--            Sender Parent Layout-->
            <RelativeLayout
                android:id="@+id/sender_msg_parent_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/receiver_msg_layout">

                <RelativeLayout
                    android:id="@+id/type_image_sender_msg_layout"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/sender_drawable">

                    <ImageView
                        android:id="@+id/sender_image"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp" />

                    <TextView
                        android:id="@+id/type_image_sender_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sender_image"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/boogaloo"
                        android:padding="15dp"
                        android:text="Hey Man"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/logo_first"
                        android:textSize="15sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/sender_reply_to_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/type_image_sender_msg_layout"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/sender_reply_layout_bg"
                    android:fontFamily="@font/boogaloo"
                    android:padding="15dp"
                    android:text="achal urankar\nany terver revrevergvergve rg vrevreve rvvervext"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/type_text_reply_sender_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sender_reply_to_text"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/sender_drawable"
                    android:fontFamily="@font/boogaloo"
                    android:padding="15dp"
                    android:text="Hey Man"
                    android:layout_marginLeft="35dp"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/logo_first"
                    android:textSize="15sp" />
            </RelativeLayout>
        </RelativeLayout>

<!--        Common attributes-->
        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item"
            android:fontFamily="@font/boogaloo"
            android:paddingLeft="5dp"
            android:paddingTop="2.5dp"
            android:paddingRight="5dp"
            android:paddingBottom="2.5dp"
            android:text="3:29 pm 23/09/2020"
            android:textColor="@color/logo_first"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/seen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:fontFamily="@font/boogaloo"
            android:paddingLeft="5dp"
            android:paddingTop="2.5dp"
            android:paddingRight="5dp"
            android:paddingBottom="2.5dp"
            android:text="seen"
            android:textAlignment="viewEnd"
            android:textColor="@color/darker_grey"
            android:textSize="13sp"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>