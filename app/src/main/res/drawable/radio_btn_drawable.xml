<?xml version="1.0" encoding="utf-8"?>
<selector android:shape="oval" xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/logo_first" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/dark_background" />
            <stroke android:color="@color/logo_first" android:width="2dp"/>
        </shape>
    </item>
</selector>